	},
	"devDependencies": {
		"@types/bun": "^1.2.10",
		"@types/wav": "^1.0.4",
		"eslint": "^9.25.1"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@discordjs/voice": "^0.18.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.1",
		"discord.js": "^14.18.0",
		"prism-media": "^1.3.5",
		"wav": "^1.0.2"
	}
}
