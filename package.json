{
	"name": "psychiatrie-recorder",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"cook": "bun --bun run ./src/index.ts",
		"serve": "bun build --outdir=target --sourcemap --target=node --minify ./src/index.ts",
